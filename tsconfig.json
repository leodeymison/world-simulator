{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
  },
  "exclude": ["**/*.spec.ts", "**/*.test.ts", "node_modules", "test"],
  "include": ["tests/**/*.ts", "src/**/*.ts"]
}
